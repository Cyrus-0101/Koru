{
    "tasks": [
        {
            "label": "Build All Components",
            "dependsOn": [
                // "Build GLSL 2 SPV",
                "Build Engine",
                "Build Testbed",
                "Build Everything",
                // "Test Everything",
                // "Run Tests of Everything"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build Engine",
            "windows": {
                "command": "${workspaceFolder}/engine/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/engine/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Testbed",
            "windows": {
                "command": "${workspaceFolder}/testbed/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/testbed/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/testbed"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "${workspaceFolder}/build-all.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/build-all.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Run Tests",
            "windows": {
                "command": "${workspaceFolder}/tests/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/tests/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CRITERION_OUTPUTS": "tap,json"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Run Test Build",
            "windows": {
                "command": "${workspaceFolder}/test/tests"
            },
            "linux": {
                "command": "${workspaceFolder}/test/tests"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CRITERION_OUTPUTS": "tap,json"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Clean Everything",
            "windows": {
                "command": "${workspaceFolder}\\clean-all.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/clean-all.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build GLSL 2 SPV",
            "windows": {
                "command": "${workspaceFolder}/post-build.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/post-build.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Test Everything",
            "windows": {
                "command": "${workspaceFolder}\tests\build.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/tests/build.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Run Tests of Everything",
            "windows": {
                "command": "cd ${workspaceFolder}/bin && .\\tests.exe && cd ..",
            },
            "linux": {
                "command": "cd ${workspaceFolder}/bin && ./tests && cd ..",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
    ],
    "version": "2.0.0"
}